# .env.example - Copy this to .env and fill in your values

# =============================================================================
# CORE DJANGO SETTINGS
# =============================================================================

# Environment (development, staging, production)
DEBUG=True
ENVIRONMENT=development

# Security - CHANGE THIS IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production-min-50-chars

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Site configuration
SITE_URL=http://localhost:8000
SITE_NAME=Harbour Hub

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DB_NAME=harbour_hub
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Alternative: Database URL (overrides individual settings above)
# DATABASE_URL=postgresql://username:password@localhost:5432/harbour_hub

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379/1

# Celery broker (usually same as Redis)
CELERY_BROKER_URL=redis://localhost:6379/0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Email credentials
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Default sender
DEFAULT_FROM_EMAIL=noreply@harbourhub.com
SERVER_EMAIL=server@harbourhub.com

# Admin email notifications
ADMIN_EMAIL=admin@harbourhub.com

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Use AWS S3 for file storage (True/False)
USE_S3=False

# AWS S3 Configuration (only needed if USE_S3=True)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=harbour-hub-storage
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=harbour-hub-storage.s3.amazonaws.com

# S3 Settings
AWS_DEFAULT_ACL=public-read
AWS_S3_OBJECT_PARAMETERS_CacheControl=max-age=86400
AWS_QUERYSTRING_AUTH=False

# Local file storage (used when USE_S3=False)
MEDIA_ROOT=/path/to/media/files
STATIC_ROOT=/path/to/static/files

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS settings (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# CSRF trusted origins
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT Token settings
JWT_ACCESS_TOKEN_LIFETIME_HOURS=24
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True

# Rate limiting
RATELIMIT_ENABLE=True
LOGIN_RATE_LIMIT=5/h
INQUIRY_RATE_LIMIT=10/h
REGISTRATION_RATE_LIMIT=5/h

# Session settings
SESSION_COOKIE_AGE=1209600
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# =============================================================================
# THIRD-PARTY SERVICE INTEGRATIONS
# =============================================================================

# Google reCAPTCHA (optional)
RECAPTCHA_PUBLIC_KEY=your-recaptcha-site-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-secret-key

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXX-X

# =============================================================================
# BUSINESS LOGIC SETTINGS
# =============================================================================

# File upload limits (in MB)
MAX_IMAGE_SIZE_MB=10
MAX_DOCUMENT_SIZE_MB=50
MAX_IMAGES_PER_LISTING=10
MAX_DOCUMENTS_PER_LISTING=5
MAX_INQUIRY_ATTACHMENTS=5
MAX_ATTACHMENT_SIZE_MB=25

# Listing settings
LISTING_EXPIRY_DAYS=90
AUTO_APPROVE_LISTINGS=False
REQUIRE_ADMIN_APPROVAL=True

# User settings
REQUIRE_EMAIL_VERIFICATION=True
AUTO_VERIFY_SERVICE_PROVIDERS=False
USER_VERIFICATION_REQUIRED_DOCS=business_license,insurance_certificate

# Inquiry settings
MAX_INQUIRIES_PER_HOUR=10
AUTO_MARK_SPAM_THRESHOLD=5
INQUIRY_NOTIFICATION_DELAY_MINUTES=5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log to file
LOG_TO_FILE=True
LOG_FILE_PATH=logs/harbour_hub.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Log to console
LOG_TO_CONSOLE=True

# =============================================================================
# MONITORING & PERFORMANCE
# =============================================================================

# Enable Django Debug Toolbar (development only)
ENABLE_DEBUG_TOOLBAR=True

# Database connection pooling
DB_CONN_MAX_AGE=600
DB_MAX_CONNECTIONS=20

# Cache timeout (seconds)
CACHE_TIMEOUT=3600
CACHE_KEY_PREFIX=harbour_hub

# Performance monitoring
ENABLE_QUERY_COUNTING=False
SLOW_QUERY_THRESHOLD_MS=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_USER_REGISTRATION=True
ENABLE_CONTENT_REPORTING=True
ENABLE_ANALYTICS_TRACKING=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_REAL_TIME_NOTIFICATIONS=False
ENABLE_SOCIAL_LOGIN=False
ENABLE_PAYMENT_PROCESSING=False

# Maintenance mode
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=Site is under maintenance. Please check back later.

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development tools
ENABLE_DJANGO_EXTENSIONS=True
ENABLE_SILK_PROFILER=False

# Test settings
USE_TEST_DATABASE=False
TEST_DATABASE_NAME=test_harbour_hub

# Sample data generation
CREATE_SAMPLE_DATA=False
SAMPLE_USERS_COUNT=50
SAMPLE_LISTINGS_COUNT=100
SAMPLE_INQUIRIES_COUNT=200

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# SSL/HTTPS settings (production only)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# Session security (production only)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database backup settings
BACKUP_ENABLED=True
BACKUP_DIRECTORY=/opt/harbour_hub/backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# S3 backup settings (optional)
BACKUP_TO_S3=False
BACKUP_S3_BUCKET=harbour-hub-backups

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email notification settings
SEND_WELCOME_EMAIL=True
SEND_INQUIRY_NOTIFICATIONS=True
SEND_LISTING_APPROVED_NOTIFICATIONS=True
SEND_VERIFICATION_NOTIFICATIONS=True
SEND_ADMIN_REPORT_NOTIFICATIONS=True

# Notification timing
BATCH_EMAIL_PROCESSING=True
EMAIL_BATCH_SIZE=100
EMAIL_RATE_LIMIT=100/hour

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API settings
API_RATE_LIMIT=1000/hour
API_BURST_LIMIT=100/minute
API_VERSION=v1

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# API Documentation
ENABLE_API_DOCS=True
API_DOCS_AUTHENTICATION_REQUIRED=False

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================

# Search settings
ENABLE_FULL_TEXT_SEARCH=True
SEARCH_MIN_LENGTH=3
SEARCH_MAX_RESULTS=1000

# Elasticsearch (optional)
ENABLE_ELASTICSEARCH=False
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=harbour_hub

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Internal analytics
TRACK_USER_ACTIVITY=True
TRACK_LISTING_VIEWS=True
TRACK_SEARCH_QUERIES=True
ANALYTICS_RETENTION_DAYS=365

# External analytics
GOOGLE_ANALYTICS_ENABLED=False
MIXPANEL_ENABLED=False
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# CUSTOM BUSINESS SETTINGS
# =============================================================================

# Marketplace settings
COMMISSION_RATE=0.05  # 5% commission
FEATURED_LISTING_PRICE=50.00
VERIFICATION_FEE=100.00

# Geographic settings
DEFAULT_COUNTRY=USA
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,AUD

# Contact settings
SUPPORT_EMAIL=support@harbourhub.com
SUPPORT_PHONE=+1-555-123-4567
BUSINESS_ADDRESS=123 Harbor Street, Houston, TX 77001

# =============================================================================
# DOCKER CONFIGURATION (for containerized deployment)
# =============================================================================

# Docker-specific overrides
POSTGRES_DB=harbour_hub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# KUBERNETES CONFIGURATION (for K8s deployment)
# =============================================================================

# Kubernetes settings
K8S_NAMESPACE=harbour-hub
K8S_SERVICE_NAME=harbour-hub-api
K8S_INGRESS_HOST=api.harbourhub.com

# Health check endpoints
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_DATABASE=True
HEALTH_CHECK_REDIS=True
HEALTH_CHECK_S3=True